<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="0dip" android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:background="@drawable/background">
	<ImageView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:src="@drawable/logo"
		android:layout_alignParentTop="false" android:layout_centerHorizontal="true"
		android:id="@+id/logo" android:layout_marginTop="50.333333333333333dip" android:clickable="true">
	</ImageView>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_centerHorizontal="true"
		android:id="@+id/playerInfoLayout" android:layout_below="@+id/logo" android:layout_marginTop="50dip">
		<TextView android:typeface="sans" android:textColor="@color/playerColor"
			android:textSize="14px" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="USERNAME:" android:id="@+id/username"></TextView>
		
	<EditText android:layout_height="wrap_content" android:maxLines="1" android:textColor="@color/White" android:padding="3dip" android:layout_width="wrap_content" android:id="@+id/usernameEditText" android:layout_below="@+id/username" android:background="@drawable/field"></EditText>
<TextView android:textSize="14px" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/playerColor" android:typeface="sans" android:layout_below="@+id/usernameEditText" android:layout_alignLeft="@+id/usernameEditText" android:text="PASSWORD:" android:id="@+id/password" android:paddingTop="5dip"></TextView><EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/passwordEditText" android:layout_below="@+id/password" android:textColor="@color/White" android:maxLines="1" android:padding="3dip" android:password="true" android:background="@drawable/field"></EditText><Button android:layout_marginTop="10dip" android:id="@+id/goButton" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/passwordEditText" android:layout_alignRight="@+id/passwordEditText" android:background="@drawable/btn_go"></Button>







</RelativeLayout>
	<AbsoluteLayout android:layout_alignParentBottom="true"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/drunkenHamsterLayout">
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:background="@drawable/drunkenhamsterlogo"
			android:id="@+id/drunkenHamsterButton"></Button>
	</AbsoluteLayout>
</RelativeLayout>
